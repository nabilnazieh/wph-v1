<templateSet group="user">
  <template name="." value="-&gt;" description="method or property selection" toReformat="true" toShortenFQNames="true">
    <context>
      <option name="PHP Expression" value="true" />
      <option name="PHP Statement" value="true" />
    </context>
  </template>
  <template name="tc" value="try {&#10;        $SELECTION$&#10;} catch (Exception $e){&#10;        $END$&#10;}" description="try catch block" toReformat="true" toShortenFQNames="true">
    <context>
      <option name="PHP Expression" value="true" />
      <option name="PHP Statement" value="true" />
    </context>
  </template>
  <template name="eeco" value="echo $Str$ then $Strc$ ;" description="echo camelCase" toReformat="false" toShortenFQNames="true">
    <variable name="Str" expression="" defaultValue="ahmed nabil" alwaysStopAt="true" />
    <variable name="Strc" expression="camelCase(Str)" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="&lt;??" value="&lt;?php $var$ ?&gt; $END$" description="php command" toReformat="false" toShortenFQNames="true">
    <variable name="var" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="HTML" value="true" />
      <option name="PHP" value="true" />
      <option name="PHP Comment" value="false" />
    </context>
  </template>
</templateSet>